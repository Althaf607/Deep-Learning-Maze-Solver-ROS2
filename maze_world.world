<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="maze_world">

    <!-- ================== BASIC WORLD ================== -->

    <!-- Sun -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Ground -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- ================== OUTER BOUNDARY ================== -->
    <!-- North wall has EXIT GAP -->

    <!-- North Wall LEFT -->
    <model name="north_wall_left">
      <static>true</static>
      <pose>-3.1 5 0.5 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>3.8 0.2 1</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>3.8 0.2 1</size></box>
          </geometry>
        </visual>
      </link>
    </model>

    <!-- North Wall RIGHT -->
